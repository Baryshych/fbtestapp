
<div class='row'>
    <div class='col-md-2 col-md-offset-5'>
        <%= image_tag @data.picture, :class => "img-circle" %>
    </div>
</div>
<div class='row'>
    <div class='col-md-4 col-md-offset-4'>
        <h1><%= @data.name %></h1>
    </div>
</div>
<div class='row'>
    <%= @data.bio %>
</div>
<div class='row'>
    <% if @user.include?("hometown") %>
    <%= @user['hometown']['name'] %>
    <% end %>
</div>
<div class='row'>
     <% if @user.include?("education") %>
     <table class="table table-striped ">
     <%= @user['education'].each do |school| %>
    <tr><%= school["school"].include?("name") ? school["school"]["name"].titleize : "-" %></tr>
    <tr><%= school.include?("type") ? school["type"].titleize : "-" %></tr>
    <tr><%= school.include?("year") ? school["year"]["name"] + "-01" + "-01" : "-" %><tr>
     <% end %>
     </table>
     <% end %>
</div>
<div class='row'>
    <%= @user['birthday'] %>
</div>

